<button id="getEmployees" class="btn btn-primary">GetEmployees</button>

@section Scripts
	{
	<script>
		$("#getEmployees").on("click", function(){
		$.ajax({
			type:"GET",
				url: "https://localhost:7073/api/Employees"
		}).done(function(data){
			alert(data);
		}).fail(function(err){
			alert(err.statusText);
		}
		});
	</script>
}